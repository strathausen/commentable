<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments</title>
    <link rel="stylesheet" href="/css/embed-#(style).css">
</head>
<body>
    <div class="comments-container">
        <h2 class="comments-title">Comments</h2>

        <form id="commentForm" class="comment-form">
            <input
                type="text"
                id="authorName"
                placeholder="Your name (optional)"
                class="comment-input"
            >
            <textarea
                id="commentContent"
                placeholder="Write your comment..."
                required
                class="comment-textarea"
            ></textarea>
            <button type="submit" class="comment-submit">Post Comment</button>
            <div id="formError" class="error"></div>
        </form>

        <div id="commentsList" class="comments-list">
            #for(comment in comments):
                <div class="comment-item">
                    <div class="comment-header">
                        <span class="comment-author">#if(comment.authorName):#(comment.authorName)#else:Anonymous#endif</span>
                        <span class="comment-date">#if(comment.createdAt):#date(comment.createdAt)#endif</span>
                    </div>
                    <p class="comment-content">#(comment.content)</p>
                </div>
            #endfor
        </div>

        <footer class="embed-footer">
            <a href="https://commentable.space" target="_blank" rel="noopener">ðŸ’¬ comments by commentable.space</a>
        </footer>
    </div>

    <script>
        const form = document.getElementById('commentForm');
        const commentsList = document.getElementById('commentsList');
        const errorDiv = document.getElementById('formError');
        const submitBtn = form.querySelector('button[type="submit"]');
        const authorNameInput = document.getElementById('authorName');
        const contentInput = document.getElementById('commentContent');

        // Check if we're in preview mode
        const urlParams = new URLSearchParams(window.location.search);
        const isPreview = urlParams.get('preview') === 'true';

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const authorName = authorNameInput.value || null;
            const content = contentInput.value;

            // Disable form
            submitBtn.disabled = true;
            submitBtn.textContent = 'Posting...';
            authorNameInput.disabled = true;
            contentInput.disabled = true;

            if (isPreview) {
                // Client-side only for preview
                const now = new Date();
                const timeString = now.toLocaleString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric',
                    hour: 'numeric',
                    minute: '2-digit',
                    hour12: true
                });

                const commentHtml = `
                    <div class="comment-item">
                        <div class="comment-header">
                            <span class="comment-author">${authorName || 'Anonymous'}</span>
                            <span class="comment-date">${timeString}</span>
                        </div>
                        <p class="comment-content">${content.replace(/</g, '&lt;').replace(/>/g, '&gt;')}</p>
                    </div>
                `;

                commentsList.insertAdjacentHTML('afterbegin', commentHtml);
                form.reset();
                errorDiv.textContent = '';

                // Re-enable form
                submitBtn.disabled = false;
                submitBtn.textContent = 'Post Comment';
                authorNameInput.disabled = false;
                contentInput.disabled = false;
            } else {
                // Normal server-side posting
                try {
                    const response = await fetch('/embed/#(websiteId)/comment', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            path: '#(path)',
                            authorName,
                            content
                        })
                    });

                    if (response.ok) {
                        const html = await response.text();
                        commentsList.insertAdjacentHTML('afterbegin', html);
                        form.reset();
                        errorDiv.textContent = '';
                    } else {
                        const error = await response.json();
                        errorDiv.textContent = error.reason || 'Failed to post comment';
                    }
                } catch (err) {
                    errorDiv.textContent = 'Network error';
                } finally {
                    // Re-enable form
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Post Comment';
                    authorNameInput.disabled = false;
                    contentInput.disabled = false;
                }
            }
        });
    </script>
</body>
</html>
