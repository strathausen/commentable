#extend("base"):
    #export("body"):
        <div class="container">
            <header class="dashboard-header">
                <div>
                    <h1>Moderation Prompts</h1>
                    <p>Website: #(website.name)</p>
                </div>
                <div class="user-info">
                    <a href="/dashboard" class="btn-small">Back to Dashboard</a>
                    <span>#(user.email)</span>
                </div>
            </header>

            <section class="prompts-section">
                <div class="section-header">
                    <h2>Custom Moderation Rules</h2>
                    <button id="addPromptBtn" class="btn">Add Prompt</button>
                </div>

                <div class="info-box">
                    <p>Custom prompts are used in addition to OpenAI's standard moderation. They help you enforce specific rules for your community.</p>
                </div>

                #if(count(prompts) > 0):
                    <div class="prompts-list">
                        #for(prompt in prompts):
                            <div class="prompt-card">
                                <div class="prompt-header">
                                    <span class="prompt-status status-#if(prompt.isActive):active#else:inactive#endif">
                                        #if(prompt.isActive):Active#else:Inactive#endif
                                    </span>
                                    <div class="prompt-actions">
                                        <button class="btn-small toggle-prompt" data-id="#(prompt.id)" data-active="#(prompt.isActive)">
                                            #if(prompt.isActive):Deactivate#else:Activate#endif
                                        </button>
                                        <button class="btn-small delete-prompt" data-id="#(prompt.id)">Delete</button>
                                    </div>
                                </div>
                                <div class="prompt-content">
                                    #(prompt.prompt)
                                </div>
                                <div class="prompt-date">
                                    Created: #if(prompt.createdAt):#date(prompt.createdAt)#endif
                                </div>
                            </div>
                        #endfor
                    </div>

                    <div class="rerun-section">
                        <button id="rerunBtn" class="btn">Re-run Moderation on Pending Comments</button>
                        <p class="help-text">This will re-moderate all pending comments using the current active prompts.</p>
                    </div>
                #else:
                    <p class="empty-state">No moderation prompts yet. Add your first prompt to enforce custom rules.</p>
                #endif
            </section>
        </div>

        <!-- Add Prompt Modal -->
        <div id="addPromptModal" class="modal">
            <div class="modal-content">
                <h2>Add Moderation Prompt</h2>
                <form id="addPromptForm">
                    <div class="form-group">
                        <label for="prompt">Prompt</label>
                        <textarea id="prompt" name="prompt" rows="4" placeholder="e.g., Reject comments containing profanity or spam" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" id="isActive" name="isActive" checked>
                            Active
                        </label>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn">Add</button>
                        <button type="button" id="cancelBtn" class="btn">Cancel</button>
                    </div>
                    <div id="error" class="error"></div>
                </form>
            </div>
        </div>

        <style>
            .prompts-section {
                margin-top: 2rem;
            }

            .info-box {
                padding: 1rem;
                background: var(--secondary);
                border: var(--border);
                margin-bottom: 2rem;
            }

            .prompts-list {
                display: flex;
                flex-direction: column;
                gap: 1.5rem;
                margin-bottom: 2rem;
            }

            .prompt-card {
                padding: 1.5rem;
                background: var(--white);
                border: var(--border);
                box-shadow: var(--shadow);
            }

            .prompt-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1rem;
                padding-bottom: 0.5rem;
                border-bottom: 2px solid var(--black);
            }

            .prompt-status {
                display: inline-block;
                padding: 0.25rem 0.75rem;
                font-weight: bold;
                text-transform: uppercase;
                font-size: 0.85rem;
                border: 2px solid var(--black);
            }

            .status-active {
                background: var(--success);
                color: var(--black);
            }

            .status-inactive {
                background: #ccc;
                color: var(--black);
            }

            .prompt-actions {
                display: flex;
                gap: 0.5rem;
            }

            .prompt-content {
                padding: 1rem;
                background: #f5f5f5;
                border: 2px solid var(--black);
                margin: 0.5rem 0;
                white-space: pre-wrap;
            }

            .prompt-date {
                margin-top: 0.5rem;
                font-size: 0.85rem;
                color: #666;
            }

            .rerun-section {
                margin-top: 2rem;
                padding: 1.5rem;
                background: #fff3cd;
                border: var(--border);
            }

            .help-text {
                margin-top: 0.5rem;
                font-size: 0.9rem;
                color: #666;
            }

            textarea {
                width: 100%;
                padding: 0.75rem;
                border: var(--border);
                background: var(--white);
                font-family: 'Courier New', monospace;
                font-size: 1rem;
                resize: vertical;
            }

            textarea:focus {
                outline: none;
                background: var(--secondary);
            }

            label input[type="checkbox"] {
                margin-right: 0.5rem;
            }
        </style>

        <script>
            const modal = document.getElementById('addPromptModal');
            const addBtn = document.getElementById('addPromptBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const websiteId = '#(websiteId)';

            addBtn.onclick = () => modal.style.display = 'flex';
            cancelBtn.onclick = () => modal.style.display = 'none';

            // Add prompt
            document.getElementById('addPromptForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const prompt = document.getElementById('prompt').value;
                const isActive = document.getElementById('isActive').checked;
                const errorDiv = document.getElementById('error');

                try {
                    const response = await fetch(`/websites/${websiteId}/moderation-prompts`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ prompt, isActive })
                    });

                    if (response.ok) {
                        window.location.reload();
                    } else {
                        const error = await response.json();
                        errorDiv.textContent = error.reason || 'Failed to add prompt';
                    }
                } catch (err) {
                    errorDiv.textContent = 'Network error';
                }
            });

            // Toggle prompt
            document.querySelectorAll('.toggle-prompt').forEach(btn => {
                btn.onclick = async () => {
                    const id = btn.dataset.id;
                    const isActive = btn.dataset.active === 'true';

                    try {
                        const response = await fetch(`/websites/${websiteId}/moderation-prompts/${id}`, {
                            method: 'PATCH',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ isActive: !isActive })
                        });

                        if (response.ok) {
                            window.location.reload();
                        }
                    } catch (err) {
                        console.error('Toggle failed:', err);
                    }
                };
            });

            // Delete prompt
            document.querySelectorAll('.delete-prompt').forEach(btn => {
                btn.onclick = async () => {
                    if (!confirm('Are you sure you want to delete this prompt?')) return;

                    const id = btn.dataset.id;

                    try {
                        const response = await fetch(`/websites/${websiteId}/moderation-prompts/${id}`, {
                            method: 'DELETE'
                        });

                        if (response.ok) {
                            window.location.reload();
                        }
                    } catch (err) {
                        console.error('Delete failed:', err);
                    }
                };
            });

            // Re-run moderation
            const rerunBtn = document.getElementById('rerunBtn');
            if (rerunBtn) {
                rerunBtn.onclick = async () => {
                    if (!confirm('Re-run moderation on all pending comments?')) return;

                    rerunBtn.textContent = 'Processing...';
                    rerunBtn.disabled = true;

                    try {
                        const response = await fetch(`/websites/${websiteId}/moderation-prompts/rerun`, {
                            method: 'POST'
                        });

                        if (response.ok) {
                            alert('Moderation re-run started!');
                            window.location.reload();
                        } else {
                            alert('Failed to re-run moderation');
                        }
                    } catch (err) {
                        alert('Network error');
                    } finally {
                        rerunBtn.textContent = 'Re-run Moderation on Pending Comments';
                        rerunBtn.disabled = false;
                    }
                };
            }
        </script>
    #endexport
#endextend
